pipeline {
    agent any
    stages {
        stage('Build') { 
            steps {
                sh 'mvn -B -DskipTests install' 
            }
        }
        stage('Unit Test') { 
            steps {
                sh 'mvn clean test'  
            }
        }
        stage('Package') { 
            steps {
                sh 'mvn clean package'  
            }
        }
        stage('Create Image') { 
            steps {
                sh 'docker build -t boiaz/gameoflife:latest /home/boiaz/gameoflife/gameoflife-web'  
            }
        }
        stage('Push Image Image') { 
            steps {
                sh 'docker push boiaz/gameoflife:latest'  
            }
        }
        stage('Start Acceptance Environment') { 
        def ret = sh(
        returnStatus: true, // This is the key bit!
        script: '''if [ "$foo" = bar ]; then exit 2; else exit 1; fi'''
        )
        if (ret == 4) {
        currentBuild.result = 'UNSTABLE'
        } else if (ret != 0) {
        currentBuild.result = 'FAILURE'
        error("Stage failed with exit code ${ret}")
            steps {
                sh 'ansible-playbook -vvvvv /etc/ansible/ec2-basic.yml'  
            }
        } 
        stage('functionality test') { 
            steps {
                sh 'java -jar /home/boiaz/Documents/goltest.jar'  
            }
        }
        stage('terminate acceptance area') { 
            steps {
                sh 'ansible-playbook /etc/ansible/ec2-terminate.yml'  
            }
        }                    
    }
}
